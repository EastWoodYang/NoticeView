<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.ycdyng.noticeview.NoticeView
        android:id="@+id/notice_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/show_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW"
        android:layout_above="@+id/change_content_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/dismiss_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISMISS"
        android:layout_above="@+id/change_content_button"
        android:layout_toRightOf="@+id/show_button"
        android:layout_toEndOf="@+id/show_button"/>

    <Button
        android:id="@+id/clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear"
        android:layout_above="@+id/change_layout_button"
        android:layout_toRightOf="@+id/dismiss_button"
        android:layout_toEndOf="@+id/dismiss_button"/>

    <Button
        android:id="@+id/change_content_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/change_layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change layout"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/change_content_button"
        android:layout_toEndOf="@+id/change_content_button"/>

</RelativeLayout>
